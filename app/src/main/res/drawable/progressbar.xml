<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/progress_background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#e0e0e0"
                android:centerColor="#e0e0e0"
                android:centerY="0.75"
                android:endColor="#e0e0e0"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@+id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#ff7043"
                    android:centerColor="#ff7043"
                    android:centerY="0.75"
                    android:endColor="#ff7043"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@+id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#ffe57f"
                    android:centerColor="#ffe57f"
                    android:centerY="0.75"
                    android:endColor="#ffe57f"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>