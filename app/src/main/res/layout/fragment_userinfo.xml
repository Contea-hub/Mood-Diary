<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">

    <Button
        android:id="@+id/userBtninfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="사용자 정보"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:fontFamily="@font/fontstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/userBtnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="초기화"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:fontFamily="@font/fontstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userBtninfo"
        tools:layout_editor_absoluteY="196dp" />

    <Button
        android:id="@+id/btnLockSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2차 비밀번호"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:fontFamily="@font/fontstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userBtnReset" />

    <Button
        android:id="@+id/btnGoalSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이달의 목표치 설정"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:fontFamily="@font/fontstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnLockSet" />

    <Button
        android:id="@+id/userBtnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:includeFontPadding="false"
        android:textSize="20sp"
        android:fontFamily="@font/fontstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoalSet" />

</androidx.constraintlayout.widget.ConstraintLayout>
